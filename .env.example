# JWT and Authentication
JWT_SECRET=your_jwt_secret_key_here
PASSWORD_SALT=your_password_salt_here

# API Secrets
CAMERA_HUB_SECRET=your_camera_hub_secret_here
CONNECTOR_SECRET=your_connector_secret_here

# Email Configuration
SMTP_HOST=smtp.yourserver.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Pinterest OAuth Configuration
PINTEREST_ID=your_pinterest_client_id
PINTEREST_SECRET=your_pinterest_client_secret
PINTEREST_REDIRECT_URI=pinterest
PINTEREST_SCOPE=user_accounts:read,boards:read,boards:read_secret,pins:read,pins:read_secret,ads:read,boards:write,boards:write_secret,pins:write,pins:write_secret
PINTEREST_API_URL=https://api.pinterest.com/v5/
PINTEREST_PHOTOS_URL=https://www.pinterest.com/
PINTEREST_ACCOUNT=your_pinterest_account_username

# Camunda Configuration
CAMUNDA_BASE_URL=http://camunda-service/engine-rest/

# Application URLs
PLATFORM_URL=http://localhost:5000/
BLOCKCHAIN_API_URL=https://bchain/api/Users
PINTEREST_COVER_IMAGE_URL=http://localhost:5000/Play.jpg

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5000,https://localhost:5001

# MongoDB Configuration
MONGODB_HOST=localhost
